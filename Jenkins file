pipeline {
    agent any
    environment {
        DEST_PATH = "/var/www/html/index-azure.html"
        INVENTORY_FILE = "/home/ubuntu/inventory.ini"
        PLAYBOOK_FILE = "/home/ubuntu/playbook.yml"
    }
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/nanrutha-pandu/capestone-project.git'
            }
        }
        stage('Deploy AWS HTML') {
            steps {
                sh 'sudo -u ubuntu ansible-playbook -i /home/ubuntu/inventory.ini /home/ubuntu/playbook.yml'
            }
        }
    }
}
